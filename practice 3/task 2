month = ["January", "February", "March", "April", "May", "June", "July",
         "August", "September", "October", "November", "December"]


def season_events(number_of_month):
    if number_of_month > 12 or number_of_month < 1:
        print("You need to enter the real number of the month ")
    elif number_of_month == 12 or number_of_month <= 2:
        print('You were born in', month[number_of_month-1], '. White snow fell outside the window')
    elif number_of_month < 5:
        print( 'You were born in', month[number_of_month-1], '. Birds sang beautiful songs')
    elif number_of_month < 8:
        print( 'You were born in', month[number_of_month-1], '. The sun shone brighter than ever')
    else:
        print( 'You were born in', month[number_of_month-1], '. The harvest was incredible')


print('enter the n of m\n')
number_of_month = int(input())
season_events(number_of_month)
